<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<!-- 쿼리문 작성 -->
	
	
	<!-- id check -->
	<select id="idcheck" parameterType="String" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select 	id
			from users
			where id like #{id}
		]]>
	</select>
	
	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values(
			    seq_users_no.nextval,
			    #{id},
			    #{userName},
			    #{password},
			    sysdate
			)
		]]>
	</insert>
	
	<!-- blog.xml을 생성했다가 insert 만 사용이 돼서 삭제 회원가입을 하면 블로그가 자동 생성되므로 user.xml에서 insert 처리 -->
	<insert id="insertBlog" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into blog
			values(
			    #{id},
			    #{blogTitle},
			    #{logoFile}
			)
		]]>
	</insert>

</mapper>